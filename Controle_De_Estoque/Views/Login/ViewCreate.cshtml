@model Controle_De_Estoque.Models.Login.Login;

@{
    ViewData["Title"] = "Criar Conta";
}

<h1>Criar Conta</h1>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <!-- Summary para exibir erros que não estão ligados a campos específicos -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* 
                O campo 'Id' (Key) geralmente é gerado automaticamente pelo banco de dados 
                e não precisa estar no formulário de criação. 
            *@

            <!-- Campo Nome -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Campo Email -->
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Campo Senha -->
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <!-- Use input type="password" para ocultar a senha -->
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Campo Confirmar Senha -->
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <!-- Use input type="password" para ocultar a senha -->
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Botão de Submissão -->
            <div class="form-group mt-3">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}