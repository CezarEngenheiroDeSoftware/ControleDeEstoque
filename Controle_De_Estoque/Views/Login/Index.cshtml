@model IEnumerable<Controle_De_Estoque.Models.Login.Login>

@{
    ViewData["Title"] = "Lista de Logins";
}

<h4 class="text-primary">Lista de Logins</h4>

<p>
    <!-- Link para a view de criação -->
    <a style="border-color:black;" asp-action="ViewCreate" class="btn btn-sm"><i class="fa fa-plus text-success"></i></a>
    <a style="border-color:black;" asp-action="ViewConfig" class="btn btn-sm"><i class="fa fa-wrench text-success"></i></a>

</p>

<table class="table">
    <thead>
        <tr>
            <!-- Cabeçalhos da Tabela -->
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <!-- A senha e a confirmação de senha não devem ser exibidas em uma lista pública -->
            <th></th> <!-- Coluna para os links de Ações (Editar, Detalhes, Excluir) -->
        </tr>
    </thead>
    <tbody>
        <!-- Itera sobre cada item na lista do modelo -->
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <!-- Links de Ação para cada item -->
                    @* 
                        Você precisará criar os métodos correspondentes (Edit, Details, Delete) 
                        no seu LoginController para que esses links funcionem corretamente.
                    *@
                    <a style="border-color:black;" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm"><i class="fa fa-edit text-primary"></i></a> |
                    <a style="border-color:black;" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm"><i class="fa fa-search text-warning"></i></a> |
                    <a style="border-color:black;" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm"><i class="fa fa-trash text-danger"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>