@model Controle_De_Estoque.Models.SerchProduct

<h2>Item MercadoLivre</h2>
@if (TempData["Success"] != null)
{
    <div class="alert-success" aria-label="Estoque atualizado com sucess">
        <span class="alert">@TempData["Success"]</span>
    </div>
}
<div class="col-sm-3">
    <a class="btn btn-primary" asp-controller="MercadoLivre" asp-action="GetListProduct">Lista de Produtos</a>
</div>
<div class="card col-6 mt-4 shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Títutlo do produto: </dt>
        <dd class="col-sm-9">@Model.title</dd>
        <dt class="col-sm-3">ID do produto:</dt>
        <dd class="col-sm-9">@Model.id</dd>
        <dt class="col-sm-3">Quantidade</dt>
        <dd class="col-sm-9">@Model.available_quantity</dd>
        <a style="border-color:black;" class="btn" asp-controller="MercadoLivre" asp-action="Update" asp-route-id="@Model.id"><i class="text-primary fa fa-edit"></i></a>
    </dl>

</div>

<div class="container">
    <div class="row">
        <div class="mt-4 card shadow p-4">
            <h4 class="text-primary mb-3">Atributos do Produto</h4>
            <table class=" table table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>
                                Nome
                            </th>
                            <th>
                                Valor Nome
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model.attributes)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelitem => a.name);
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => a.value_name)
                                </td>
                                <td>
                                <a style="border-color:black;" class="btn" asp-controller="MercadoLivre" asp-action="Update" asp-route-id="@a.id"><i class="text-primary fa fa-edit"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
            </table>
        </div>
    </div>
</div>
<div class="card mt-4 shadow p-4">
    <h4 class="text-primary mb-3">Variações</h4>
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>ID da Variação</th>
                <th>Preço</th>
                <th>Estoque Disponível</th>
                <th>SKU</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var a in Model.variations)
            {
                <tr>
                    <td>@a.variationsId</td>
                    <td>@a.price.ToString("C")</td>
                    <td>@a.available_quantity</td>
                    <td>@a.seller_custom_field</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="MercadoLivre" asp-action="Update" asp-route-id="@a.variationsId">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-md-3">
</div>
